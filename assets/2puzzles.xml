  <activity class="@puzzles.DoublePuzzle" name="NOM  BOIX GRÈVOL" code="">
   <description />
   <messages>
    <cell type="initial">
     <style>
      <font family="Arial" size="28" />
      <color foreground="0x336600" background="0xFFFFFF" />
     </style>
